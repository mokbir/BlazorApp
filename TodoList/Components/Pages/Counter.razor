@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

@if(currentCount == 3)
{
    <p class="btn btn-primary">You have wine</p>
}

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-danger" @onclick="() => IncrementCountAmount++">Click me 3 times</button>


@code {
    [Parameter]
    public int IncrementCountAmount { get; set; } = 1;
    private int currentCount = 0;

    private void IncrementCount() => currentCount += IncrementCountAmount;
}
